<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="MyGtkAppWindow" parent="GtkApplicationWindow">
    <property name="css-classes">transparent-background</property>
    <property name="decorated">false</property>
    <property name="resizable">false</property>
    <property name="hexpand">true</property>
    <property name="hexpand_set">true</property>
    <property name="modal">false</property>
    <property name="focus_on_click">false</property>
    <property name="opacity">1.0</property>
    <property name="has_tooltip">false</property>
    <!-- <property name="default-height">2</property> -->

    <property name="title" translatable="yes">rusticbar</property>
    <child>
      <object class="GtkBox">
        <property name="css-classes">unblur</property>
        <property name="name">father_box</property>
        <property name="margin-start">20</property>
        <property name="margin-end">20</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkListView" id="wss_list">
            <property name="orientation">horizontal</property>
            <style>
              <class name="no-background" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="hexpand">true</property>
            <property name="name">separator1</property>
            <style>
              <class name="no-background" />
            </style>
            <!-- <property name="css-classes">no-background</property> -->
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

