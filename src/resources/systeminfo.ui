<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkPopover" id="stat_popover">
    <property name="autohide">false</property>
    <property name="focusable">false</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>

        <child>
          <object class="GtkBox">
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkLabel" id="disk">
                <property name="label">DISC:</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="disk_data">
                <property name="label"></property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkLabel" id="ram">
                <property name="label">RAM:</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="ram_data">
                <property name="label"></property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkLabel" id="cpu_load">
                <property name="label">CPU LOAD:</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="cpu_load_data">
                <property name="label"></property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkLabel" id="cpu_temp">
                <property name="label">CPU TEMP:</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="cpu_temp_data">
                <property name="label"></property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkLabel" id="uptime">
                <property name="label">UPTIME:</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="uptime_data">
                <property name="label"></property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

  </object>
  <template class="SystemInfoBox" parent="GtkBox">
    <child>
      <object class="GtkMenuButton" id="menu_button">
        <property name="popover">stat_popover</property>
        <property name="name">stat_menu_button</property>
        <property name="always-show-arrow">false</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="stat_label">
        <property name="label">ó°¨‡</property>
        <!-- <property name="margin-top">12</property> -->
        <!-- <property name="margin-bottom">12</property> -->
        <!-- <property name="margin-start">12</property> -->
        <!-- <property name="margin-end">12</property> -->
      </object>
    </child>
  </template>
</interface>
